<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:layout_width="0dp"
        android:focusable="true"
        android:layout_height="0dp"
        tools:text="150"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="72dp"
        android:baselineAlignBottom="true"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:padding="24dp"
        android:src="@drawable/glucose"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/glycemia_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="@dimen/height_2x"
        app:hintEnabled="true"
        android:layout_marginTop="0dp"
        android:paddingStart="12dp"
        android:paddingTop="2dp">

        <EditText
            android:id="@+id/glycemia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:hint="Glicemia Lida"
            android:imeOptions="actionGo"
            android:inputType="numberDecimal"
            android:maxLines="1"
            tools:text="150"/>
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/revert_glycemia"
        android:layout_width="@dimen/height_2x"
        android:layout_height="@dimen/height_2x"
        android:layout_alignParentEnd="true"
        android:alpha="0"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_history_grey_700_24dp"
        android:visibility="gone"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/insulin_obj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glycemia_txt"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="@dimen/height_2x"
        android:layout_marginTop="0dp"
        android:paddingStart="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Objectivo de Glicemia"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            tools:text="82"/>
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/revert_glycemia_objective"
        android:layout_width="@dimen/height_2x"
        android:layout_height="@dimen/height_2x"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:alpha="0"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_history_grey_700_24dp"
        android:visibility="gone"/>
</RelativeLayout>