                                app:srcCompat="@drawable/ic_blood" />

                            <TextView
                                android:id="@+id/title5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image5"
                                android:layout_centerHorizontal="true"
                                android:maxLines="1"
