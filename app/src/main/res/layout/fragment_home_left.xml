                            <ImageView
                                android:id="@+id/image6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@color/transparent"
                                android:padding="5dp"
                                android:scaleType="fitStart"
