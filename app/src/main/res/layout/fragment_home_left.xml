                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image"
                        android:layout_weight="1"
                        android:background="@color/ef_grey"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/sep"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Batimento"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/value4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/sep"
                        android:text="N/a"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/value4"
                        android:text="mmHg"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/date4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/value4"
                        android:layout_toRightOf="@id/sep"
                        android:paddingLeft="120dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        tools:text="xx-xx-xxxx"/>

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_add"/>

                <!--This is the red map button on the right-->
            </LinearLayout>

            <LinearLayout
