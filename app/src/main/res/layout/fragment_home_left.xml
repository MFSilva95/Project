                        android:id="@+id/image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_blood"/>

                    <View
                        android:id="@+id/sep"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image"
                        android:layout_weight="1"
                        android:background="@color/ef_grey"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/sep"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Colesterol"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/value5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/sep"
                        android:text="N/a"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/value5"
                        android:text="mg/dl"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"/>


                    <TextView
                        android:id="@+id/date5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/value5"
                        android:layout_marginLeft="120dp"
                        android:layout_toRightOf="@id/sep"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        tools:text="xx-xx-xxxx"/>

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
