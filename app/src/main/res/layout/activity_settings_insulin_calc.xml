<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarStyle="outsideInset"
    android:scrollbars="vertical"
    tools:context=".ui.activities.SettingsInsulin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:showDividers="middle">

        <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
        <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_MyData_DiabetesType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/diabetes_type"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_MyData_DiabetesType"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_MyData_InsulinRatio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sensivity_factor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_MyData_InsulinRatio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_value3"
                android:inputType="number"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_MyData_CarbsRatio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/carbs_racio"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_MyData_CarbsRatio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_value4"
                android:inputType="number"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_MyData_LowerRange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hypoglycemia_limit"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_MyData_LowerRange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_value5"
                android:inputType="number"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_MyData_HigherRange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hyperglycemia_limit"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_MyData_HigherRange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_value6"
                android:inputType="number"
                android:textSize="18sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/block_iob"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:onClick="showIOBDialog"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="4dp"
                android:text="@string/use_iob"
                android:textSize="16sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/use_IOB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="?android:attr/dividerVertical" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:onClick="editInsulins"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center_vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="4dp"
                android:text="@string/settings_edit_insulins"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="?android:attr/dividerVertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="?android:selectableItemBackground"
            android:checked="true"
            android:gravity="center_vertical"
            android:onClick="insulinTargets"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/settings_edit_insulins_targets"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>