<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.fragments.register.FactorsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:weightSum="1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingBottom="30dp"
            android:paddingTop="15dp"
            android:text="@string/subtitle_diabetes_factors"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diabetes_type"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/diabetes_type"
            android:layout_width="match_parent"
            android:layout_height="49dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sensivity_factor"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/sensibility_factor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_value3"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carbs_racio"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/carbs_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_value4"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_grey" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_target_bg_detail"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/bg_target_Factor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_value_bg_target"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_grey" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hypoglycemia_limit"
            android:textColor="@android:color/white" />


        <EditText
            android:id="@+id/hypoglycemia_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_value5"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_grey" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hyperglycemia_limit"
            android:textColor="@android:color/white" />


        <EditText
            android:id="@+id/hyperglycemia_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_value6"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_grey" />
    </LinearLayout>

</ScrollView>
