<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.fragments.register.FactorsFragment"        android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:weightSum="1">

        <TextView
            android:text="Detalhes e Fatores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="26sp"
            android:paddingBottom="30dp"
            android:paddingTop="15dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white" />

        <TextView
            android:text="@string/diabetes_type"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/diabetes_type"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>


        <TextView
            android:text="@string/sensivity_factor"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/sensibility_factor"
            android:hint="@string/hint_value3"
            android:inputType="number"
            android:textColorHint="@color/hint_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <TextView
            android:text="@string/carbs_racio"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/carbs_ratio"
            android:hint="@string/hint_value4"
            android:inputType="number"
            android:textColorHint="@color/hint_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />


        <TextView
            android:text="@string/hypoglycemia_limit"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/hypoglycemia_limit"
            android:hint="@string/hint_value5"
            android:inputType="number"
            android:textColorHint="@color/hint_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />


        <TextView
            android:text="@string/hyperglycemia_limit"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/hyperglycemia_limit"
            android:hint="@string/hint_value6"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColorHint="@color/hint_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</ScrollView>
