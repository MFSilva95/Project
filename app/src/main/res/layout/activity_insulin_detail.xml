<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/insulinDetailScrollView"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".ui.activities.InsulinDetail" >

    <LinearLayout
        android:paddingTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="8dp"
        	android:layout_marginTop="8dp" >
        	
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark"
		        android:layout_gravity="center_vertical" />
            
            <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/date_hour"
		        android:textSize="16sp"
		        android:gravity="center_vertical|center_horizontal" />
            
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark" 
		        android:layout_gravity="center_vertical" />
        </LinearLayout>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="8dp" >
	        
	        <EditText
		        android:id="@+id/et_InsulinDetail_Data"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:textSize="18sp"
		        android:gravity="center_horizontal"
		        style="@style/Holo.Spinner"
		        android:focusable="false"
		        android:focusableInTouchMode="false"
		        android:onClick="showDatePickerDialog" />
	        
	        <EditText
		        android:id="@+id/et_InsulinDetail_Hora"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:textSize="18sp"
		        android:gravity="center_horizontal"
		        style="@style/Holo.Spinner"
		        android:focusable="false"
		        android:focusableInTouchMode="false"
		        android:onClick="showTimePickerDialog" />
        </LinearLayout>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="8dp"
        	android:layout_marginTop="8dp" >
        	
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark"
		        android:layout_gravity="center_vertical" />
            
            <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.60"
		        android:text="@string/insulin_and_day"
		        android:textSize="16sp"
		        android:gravity="center_vertical|center_horizontal" />
            
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark" 
		        android:layout_gravity="center_vertical" />
        </LinearLayout>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_horizontal" >
            
            <Spinner
			    android:id="@+id/sp_InsulinDetail_Insulin"
			    android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:gravity="center_horizontal" />
            
            <Spinner
			    android:id="@+id/sp_InsulinDetail_Tag"
			    android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:gravity="center_horizontal" />
        </LinearLayout>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="8dp"
        	android:layout_marginTop="8dp" >
        	
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark"
		        android:layout_gravity="center_vertical" />
            
            <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.75"
		        android:text="@string/data_and_read"
		        android:textSize="16sp"
		        android:gravity="center_vertical|center_horizontal" />
            
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark" 
		        android:layout_gravity="center_vertical" />
        </LinearLayout>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_horizontal" >
            
            <LinearLayout
	            android:orientation="vertical"
	            android:layout_width="0dp"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:gravity="center_vertical" >
	        	<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/bloodglucose"
			        android:textSize="16sp"
			        android:layout_gravity="center_horizontal" />
	            <EditText
			        android:id="@+id/et_InsulinDetail_Glycemia"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center_horizontal"
			        android:width="100dp"
			        android:textSize="24sp"
			        android:inputType="numberDecimal" />
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/mg_dl"
			        android:textSize="16sp"
			        android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
	            android:orientation="vertical"
	            android:layout_width="0dp"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:gravity="center_vertical" >
	        	<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/goal"
			        android:textSize="16sp"
			        android:layout_gravity="center_horizontal" />
	            <EditText
			        android:id="@+id/et_InsulinDetail_TargetGlycemia"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center_horizontal"
			        android:width="100dp"
			        android:textSize="24sp"
			        android:inputType="numberDecimal" />
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/mg_dl"
			        android:textSize="16sp"
			        android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
	            android:orientation="vertical"
	            android:layout_width="0dp"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:gravity="center_vertical" >
	        	<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/insulin"
			        android:textSize="16sp"
			        android:layout_gravity="center_horizontal" />
	            <EditText
			        android:id="@+id/et_InsulinDetail_InsulinUnits"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center_horizontal"
			        android:width="100dp"
			        android:textSize="24sp"
			        android:inputType="numberDecimal" />
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/units"
			        android:textSize="16sp"
			        android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
        
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="8dp"
        	android:layout_marginTop="8dp" >
        	
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark"
		        android:layout_gravity="center_vertical" />
            
            <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.75"
		        android:text="@string/notes"
		        android:textSize="16sp"
		        android:gravity="center_vertical|center_horizontal" />
            
            <View android:layout_height="1dip"
		        android:layout_width="fill_parent" 
		        android:layout_weight="1"
		        android:background="@color/holo_blue_dark" 
		        android:layout_gravity="center_vertical" />
        </LinearLayout>
    	<LinearLayout
	            android:orientation="vertical"
	            android:layout_width="fill_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="1"
	        	android:gravity="center_vertical" >
	            <EditText
			        android:id="@+id/et_InsulinDetail_Notes"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:gravity="top|left"
			        android:singleLine="false"
			        android:lines="2"
			        android:inputType="textMultiLine"
			        android:textSize="16sp"/>
        </LinearLayout>
        
	</LinearLayout>
</ScrollView>