<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:context=".ui.activities.InsulinDetail">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/date_hour"
                style="@style/SectionHeader"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_InsulinDetail_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:onClick="showDatePickerDialog"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_InsulinDetail_Hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:onClick="showTimePickerDialog"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/insulin_and_day"
                style="@style/SectionHeader"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_InsulinDetail_Insulin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>

            <Spinner
                android:id="@+id/sp_InsulinDetail_Tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/data_and_read"
                style="@style/SectionHeader"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/bloodglucose"
                    style="@style/Subheading"/>

                <EditText
                    android:id="@+id/et_InsulinDetail_Glycemia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:width="100dp"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/mg_dl"
                    style="@style/FormCaption"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/goal"
                    style="@style/Subheading"/>

                <EditText
                    android:id="@+id/et_InsulinDetail_TargetGlycemia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:width="100dp"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/mg_dl"
                    style="@style/FormCaption"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/insulin"
                    style="@style/Subheading"/>

                <EditText
                    android:id="@+id/et_InsulinDetail_InsulinUnits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:width="100dp"
                    android:gravity="center_horizontal"
                    android:inputType="numberDecimal"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/units"
                    style="@style/FormCaption"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addTargetObjective"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_holo_tip"
                android:onClick="addGlycemiaObjective"
                android:gravity="center"
                android:text="@string/button_add_glicemia_objective"
                android:visibility="gone"
                tools:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/bt_insulin_calc_info"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/divider"
                        android:background="@drawable/ic_bt_toggle_pointing"
                        android:drawableTop="@android:drawable/ic_menu_info_details"
                        android:gravity="center"
                        android:onClick="toggleInsulinCalcDetails"
                        android:textOff=""
                        android:textOn=""/>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_calcs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider"
            tools:layout="@layout/fragment_insulin_meal_calc"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/notes"
                style="@style/SectionHeader"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/divider"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_InsulinDetail_Notes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="2"
                android:singleLine="false"
                style="@style/Subheading"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>