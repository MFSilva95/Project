<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
            <ImageView
				android:id="@+id/img_dialog_new_disease_title"
				android:contentDescription="newexercise_img"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_gravity="right"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:src="@drawable/newdisease" />
	        
	        <TextView
		        android:id="@+id/tv_dialog_new_exercise_title"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:text="Novo exercicio"
		        android:textSize="24sp"
		        android:gravity="left|center_vertical" />
        </LinearLayout>
    
    <View android:layout_height="2dip"
        android:layout_width="fill_parent" 
        android:background="@color/holo_blue_dark"
        android:layout_marginBottom="8dp" />
    
    <TextView
	        android:id="@+id/tv_dialog_new_exercise_Name"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="Nome"
	        android:textSize="16sp"
	        android:textStyle="bold" />
        <EditText
	        android:id="@+id/et_dialog_new_exercise_Name"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textSize="16sp"
	        android:hint="BTT"
	        android:inputType="text" >
	    </EditText>

</LinearLayout>