<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="20dp"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/add_more_registers"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bs_glicemia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_glicemia"
            android:paddingBottom="8dp"
            android:paddingTop="12dp"
            android:text="@string/Glycemia"/>


        <Button
            android:id="@+id/bs_meal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_meal"
            android:paddingBottom="8dp"
            android:paddingTop="12dp"
            android:text="@string/Meal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bs_insulin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_syringe"
            android:paddingBottom="8dp"
            android:paddingTop="12dp"
            android:text="@string/insulin"/>
    </LinearLayout>
</LinearLayout>