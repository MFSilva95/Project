<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/badgesInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="@string/badges"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/helpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    app:srcCompat="@drawable/ic_help_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/record"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/beginnerBadge"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/medal_gold_beginner" />

                    <TextView
                        android:id="@+id/beginnerBadgesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_alignBottom="@id/beginnerBadge"
                        android:text="@string/n_a"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mediumLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/mediumBadge"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/medal_gold_medium" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/record"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/mediumBadgesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/n_a"
                        android:textSize="12sp"
                        android:layout_alignBottom="@+id/mediumBadge"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/advancedLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/advancedBadge"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/medal_gold_advanced" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/record"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/advancedBadgesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/advancedBadge"
                        android:gravity="center_horizontal"
                        android:text="@string/n_a"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/currentBadge"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/medal_gold_daily" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/record"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_alignBottom="@id/currentBadge"
                        android:text="@string/today_medal"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>