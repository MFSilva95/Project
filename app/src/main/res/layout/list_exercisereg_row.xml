<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:minHeight="@dimen/list_row_default_height"
                android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_list_exercisereg_left"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_exercisereg_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="@dimen/list_text_small"
            android:textStyle="bold"
            tools:text="2016-02-10"/>

        <TextView
            android:id="@+id/tv_list_exercisereg_hora"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/list_text_small"
            android:textStyle="bold"
            tools:text="11:00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_exercisereg_middleleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/ll_list_exercisereg_left"
        android:layout_toLeftOf="@+id/ll_list_exercisereg_middleright"
        android:layout_toRightOf="@+id/ll_list_exercisereg_left"
        android:layout_toStartOf="@+id/ll_list_exercisereg_middleright"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_exercisereg_exercise"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_text_huge"
            tools:text="cardio"/>

        <TextView
            android:id="@+id/tv_list_exercisereg_effort"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_text_small"
            tools:text="Muito Leve"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_exercisereg_middleright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ib_list_exercisereg_detail"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_exercisereg_duration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_text_big"
            android:textStyle="bold"
            tools:text="60"/>

        <TextView
            android:id="@+id/tv_list_exercisereg_exercise_minutes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/minutes"
            android:textSize="@dimen/list_text_small"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ib_list_exercisereg_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/viewdetail"/>
</RelativeLayout>