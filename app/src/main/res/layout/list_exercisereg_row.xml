<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:minHeight="@dimen/list_row_default_height"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/list_item_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/list_item_vertical_margin"
                tools:layout_height="48dp">

    <LinearLayout
        android:id="@+id/ll_list_exercisereg_left"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_exercisereg_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:lines="1"
            android:textColor="@android:color/background_dark"
            tools:text="2016-02-10"/>

        <TextView
            android:id="@+id/tv_list_exercisereg_hora"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@android:color/background_dark"
            android:textStyle=""
            tools:text="11:00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_exercisereg_middleleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/ll_list_exercisereg_left"
        android:layout_toLeftOf="@+id/ll_list_exercisereg_middleright"
        android:layout_toRightOf="@+id/ll_list_exercisereg_left"
        android:layout_toStartOf="@+id/ll_list_exercisereg_middleright"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_exercisereg_exercise"
            style="@android:style/TextAppearance.Large"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@android:color/background_dark"
            tools:text="cardio"/>

        <TextView
            android:id="@+id/tv_list_exercisereg_effort"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textColor="@android:color/background_dark"
            tools:text="Muito Leve"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_exercisereg_middleright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_exercisereg_duration"
            style="@android:style/TextAppearance.Large"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@android:color/background_dark"
            tools:text="60"/>

        <TextView
            android:id="@+id/tv_list_exercisereg_exercise_minutes"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/minutes"
            android:textColor="@android:color/background_dark"/>
    </LinearLayout>

</RelativeLayout>