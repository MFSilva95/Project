<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="vertical" >

   		<TextView
	        android:id="@+id/tv_DialogGlycemia_Glycemia"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="@string/glycemia_value"
	        android:textSize="16sp"
	        android:textStyle="bold" />
        <EditText
	        android:id="@+id/et_DialogGlycemia_Glycemia"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textSize="18sp"
	        android:hint="@string/hint_value"
	        android:inputType="number" >
	    </EditText>

        <TextView
	        android:id="@+id/tv_DialogGlycemia_Hour"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="@string/hour"
	        android:textSize="16sp"
	        android:textStyle="bold" />
        <EditText
	        android:id="@+id/et_DialogGlycemia_Hour"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textSize="18sp"
	        android:hint="@string/hint_hour"
	        android:inputType="datetime" >
	    </EditText>

        <TextView
	        android:id="@+id/tv_DialogGlycemia_Tag"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="@string/label"
	        android:textSize="16sp"
	        android:textStyle="bold" />
        <EditText
	        android:id="@+id/sp_DialogGlycemia_Tag"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textSize="18sp"
	        android:hint="@string/before_lunch"
	        android:inputType="text" >
	    </EditText>
	    
</LinearLayout>