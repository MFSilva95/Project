<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:context=".ui.activities.FormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/adviceFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/secondEtal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="Advice"
                android:textColor="@color/background"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/advice"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:paddingEnd="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/background"
                tools:text="Today"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2x2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:src="@drawable/ic_access_time_black_48dp"/>

            <TextView
                android:id="@+id/date"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2x"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="72dp"
                android:layout_marginRight="72dp"
                android:layout_toEndOf="@+id/img_time"
                android:layout_toRightOf="@+id/img_time"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:paddingStart="8dp"
                android:text="Today"
                tools:text="Today"
                />

            <TextView
                android:id="@+id/time"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:gravity="center|end"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="18:00"
                tools:text="18:00"/>

            <Spinner
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="@dimen/height_2x"
                android:layout_marginRight="8dp"
                android:layout_marginStart="@dimen/height_2x"
                android:layout_marginTop="0dp"
                android:entries="@array/daytimes"
                android:paddingTop="0dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            />

        <RelativeLayout
            android:id="@+id/section_glicemia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:src="@drawable/glucose"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/glycemia_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="@dimen/height_2x"
                android:layout_marginRight="8dp"
                android:layout_marginStart="@dimen/height_2x"
                android:layout_marginTop="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="2dp"
                app:errorEnabled="false">

                <pt.it.porto.mydiabetes.ui.views.ExtendedEditText
                    android:id="@+id/glycemia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:hint="@string/glycemia_measure"
                    android:imeOptions="actionGo"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/carbs"
                    app:suffix="@string/mg_dl"
                    app:suffix_color="@color/text_units"
                    tools:text="150"/>
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/revert_glycemia"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:alpha="0"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_history_grey_700_24dp"
                android:visibility="gone"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/glycemia_obj"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/glycemia_txt"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="@dimen/height_2x"
                android:layout_marginRight="8dp"
                android:layout_marginStart="@dimen/height_2x"
                android:layout_marginTop="2dp"
                android:paddingLeft="4dp"
                android:paddingStart="4dp">

                <pt.it.porto.mydiabetes.ui.views.ExtendedEditText
                    android:id="@+id/glycemia_target"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/glycemia_objective"
                    android:imeOptions="actionGo"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:maxLines="1"
                    app:suffix="@string/mg_dl"
                    tools:text="82"/>
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/addTargetObjective"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="04dp"
                android:layout_marginRight="04dp"
                android:background="?selectableItemBackground"
                android:contentDescription="@string/button_add_glicemia_objective"
                android:padding="12dp"
                android:src="@drawable/ic_add_box_grey_600_24dp"/>

            <ImageButton
                android:id="@+id/revert_glycemia_objective"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:alpha="0"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_history_grey_700_24dp"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/section_carbs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2x"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/revert_carbs"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/height_2x"
                android:layout_marginRight="@dimen/height_2x"
                android:alpha="0"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_history_grey_700_24dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/iv_MealDetail_Photo"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_photo_camera_grey_600_24dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                />

            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:src="@drawable/meal_black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <pt.it.porto.mydiabetes.ui.views.ExtendedEditText
                android:id="@+id/carbs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/carbs_intake"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:paddingEnd="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:paddingStart="8dp"
                android:layout_toRightOf="@id/img"
                android:layout_toEndOf="@id/img"
                app:suffix="@string/grams"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/section_insulin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:src="@drawable/insulin2"/>


            <Spinner
                android:id="@+id/sp_MealDetail_Insulin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2x"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="@dimen/height_2x"
                android:layout_marginRight="8dp"
                android:layout_marginStart="@dimen/height_2x"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/insulin_admin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/sp_MealDetail_Insulin"
                android:layout_marginLeft="@dimen/height_2x"
                android:layout_marginRight="8dp"
                android:layout_marginStart="@dimen/height_2x"
                android:layout_marginTop="0dp"
                android:paddingLeft="4dp"
                android:paddingStart="4dp"
                app:errorEnabled="false">

                <pt.it.porto.mydiabetes.ui.views.ExtendedEditText
                    android:id="@+id/insulin_intake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/insulin_intake"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:maxLines="1"
                    app:suffix="@string/units"/>
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/revert_admin"
                android:layout_width="@dimen/height_2x"
                android:layout_height="@dimen/height_2x"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:alpha="0"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_history_grey_700_24dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/fragment_calcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/insulin_admin"
                android:background="@color/lineguide"
                tools:layout="@layout/fragment_insulin_meal_calc"
                tools:layout_height="200dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                />

            <ImageButton
                android:id="@+id/bt_insulin_calc_info"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignEnd="@+id/insulin_admin"
                android:layout_alignRight="@+id/insulin_admin"
                android:layout_alignTop="@+id/insulin_admin"
                android:background="?selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/ic_information_outline_grey600_24dp"/>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/notes_section"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/notes"
                android:maxLines="5"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</ScrollView>
