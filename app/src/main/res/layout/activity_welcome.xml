<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.activities.WelcomeActivity"
    android:id="@+id/welcome_layout">

    <pt.it.porto.mydiabetes.utils.CustomViewPager
        android:id="@+id/content_fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_margin="0dp">

        <Button
            android:id="@+id/restoreDb"
            style="@style/Regist.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:gravity="center_vertical"
            android:layout_margin="0dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Restaurar\nCópia Segurança"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nextBT"
            android:layout_centerHorizontal="true">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dot_big"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dot_small"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dot_small"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dot_small"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/dot_small"
                />

        </LinearLayout>


        <Button
            android:id="@+id/nextBT"
            style="@style/Regist.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="@string/next_button"
            android:textColor="@color/primary_text" />
    </RelativeLayout>
    </LinearLayout>