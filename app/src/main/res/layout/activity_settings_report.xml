<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.SettingsImportExport">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/MyToolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:scrollbars="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Exportar PDF"
                        android:textAppearance="@android:style/TextAppearance.Medium" />


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scrollbarStyle="outsideInset">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:showDividers="middle">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/bloodglucose"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_glycemia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/insulin"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_insulin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/Exercise"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_exercise"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/Carbs"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_carbs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/bloodpressure"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_bloodpressure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/preferences_diseases"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_diseases"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/cholesterol"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_cholesterol"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/weight"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="false"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/HbA1c"
                                    android:textAppearance="@android:style/TextAppearance.Medium" />

                                <CheckBox
                                    android:id="@+id/cb_pdfexport_hba1c"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="8dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </ScrollView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/dates_from_until"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText

                            android:id="@+id/et_pdfexport_DataFrom"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_horizontal"
                            android:inputType="date"
                            android:onClick="showDatePickerDialogFrom"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/et_pdfexport_DataTo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_horizontal"
                            android:inputType="date"
                            android:onClick="showDatePickerDialogTo"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_gravity="center_vertical"
                        android:background="@color/holo_blue_dark" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="false"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            android:text="@string/send_email"
                            android:textAppearance="@android:style/TextAppearance.Medium" />

                        <CheckBox
                            android:id="@+id/cb_pdfexport_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:onClick="createPDF"
                        android:text="@string/export" />

                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="?android:attr/dividerVertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sincronização"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <Button
                        android:id="@+id/syncPC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_centerHorizontal="true"
                        android:drawableTop="@drawable/sync"
                        android:onClick="syncPC"
                        android:text="@string/sync_with_pc" />

                    <Button
                        android:id="@+id/syncCloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/syncPC"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="44dp"
                        android:onClick="syncCloud"
                        android:padding="24dp"
                        android:text="@string/send_to_cloud" />

                    <Button
                        android:id="@+id/editAccount"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/syncCloud"
                        android:layout_centerHorizontal="true"
                        android:background="?android:selectableItemBackground"
                        android:onClick="editAccount"
                        android:text="@string/cloudSync_edit_account" />
                </RelativeLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="?android:attr/dividerVertical" />


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical"
                    tools:context=".DB_BackupRestore">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Copia de Segurança"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.70"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/backup"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/bt_Backup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:onClick="backupButton"
                        android:text="@string/do_back" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.70"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/restore_backup"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/bt_Restore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:onClick="restore"
                        android:text="@string/restore_backup_button" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.40"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/last_backup"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/holo_blue_dark" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_lastBackup"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        tools:text="2015-10-27 14:38:58" />

                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:enabled="true"
                        android:onClick="share"
                        android:text="@string/backup_share" />

                </LinearLayout>


            </LinearLayout>


        </ScrollView>
</RelativeLayout>