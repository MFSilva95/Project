<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PdfExport" >

    <!-- TODO: Update blank fragment layout -->
	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Dados a exportar:" />
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="150dp">
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:showDividers="middle">
	        <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Glicemia" />
			    <CheckBox android:id="@+id/cb_pdfexport_glycemia"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Insulina" />
			    <CheckBox android:id="@+id/cb_pdfexport_insulin"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Exercicio" />
			    <CheckBox android:id="@+id/cb_pdfexport_exercise"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Hidratos de Carbono" />
			    <CheckBox android:id="@+id/cb_pdfexport_carbs"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Pressão arterial" />
			    <CheckBox android:id="@+id/cb_pdfexport_bloodpressure"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Doenças" />
			    <CheckBox android:id="@+id/cb_pdfexport_diseases"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
	    	<RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Colesterol" />
			    <CheckBox android:id="@+id/cb_pdfexport_cholesterol"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="Peso" />
			    <CheckBox android:id="@+id/cb_pdfexport_weight"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentRight="false"
			        android:layout_height="48dp"
			        android:textAppearance="@android:style/TextAppearance.Medium"
			        android:gravity="center_vertical"
			        android:text="HbA1c" />
			    <CheckBox android:id="@+id/cb_pdfexport_hba1c"
			        android:layout_width="wrap_content"
			        android:layout_marginRight="8dp"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentLeft="false"
			        android:layout_height="wrap_content" />
		    </RelativeLayout>
	    </LinearLayout>
	</ScrollView>
	<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dp" >
    	
        <View android:layout_height="1dip"
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:background="@color/holo_blue_dark"
			android:layout_gravity="center_vertical" />
        
        <TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Datas De/Até"
			android:textSize="16sp"
			android:gravity="center_vertical|center_horizontal" />
        
        <View android:layout_height="1dip"
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:background="@color/holo_blue_dark" 
			android:layout_gravity="center_vertical" />
    </LinearLayout>
	
	<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
     	<EditText
     	    
			android:id="@+id/et_pdfexport_DataFrom"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="18sp"
			style="@style/Holo.Spinner"
			android:gravity="center_horizontal"
			android:inputType="date"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:onClick="showDatePickerDialogFrom" />
		<EditText
			android:id="@+id/et_pdfexport_DataTo"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="18sp"
			style="@style/Holo.Spinner"
			android:gravity="center_horizontal"
			android:inputType="date"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:focusable="false"
			android:focusableInTouchMode="false" 
			android:onClick="showDatePickerDialogTo" />
     </LinearLayout>
	
	<View android:layout_height="1dip"
			android:layout_width="fill_parent" 
			android:background="@color/holo_blue_dark" 
			android:layout_gravity="center_vertical" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="false"
	        android:layout_height="48dp"
	        android:textAppearance="@android:style/TextAppearance.Medium"
	        android:gravity="center_vertical"
	        android:text="Enviar por E-mail" />
	    <CheckBox android:id="@+id/cb_pdfexport_email"
	        android:layout_width="wrap_content"
	        android:layout_marginRight="8dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentLeft="false"
	        android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Exportar"
        android:onClick="createPDF" />
    
</LinearLayout>