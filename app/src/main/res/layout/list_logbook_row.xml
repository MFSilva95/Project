<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:tag="logbookItem"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:selectableItemBackground"
              android:minHeight="@dimen/list_row_default_height"
              android:orientation="horizontal"
              tools:layout_height="48dp">

    <LinearLayout
        android:id="@+id/ll_list_logbookreg_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_logbookreg_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/list_text_small"
            android:textStyle="bold"
            tools:text="2016-01-27"/>

        <TextView
            android:id="@+id/tv_list_logbookreg_hora"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/list_text_small"
            android:textStyle="bold"
            tools:text="11:50"/>

        <TextView
            android:id="@+id/tv_list_logbookreg_tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:textSize="@dimen/list_text_small"
            tools:text="Antes almoÃ§o"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_logbookreg_middleleft"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_logbookreg_carbs_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/Carbs"
            android:textSize="@dimen/list_text_small"/>

        <TextView
            android:id="@+id/tv_list_logbookreg_carbs_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_text_huge"
            android:textStyle="bold"
            tools:text="50"/>
        <!--
     <TextView
         android:id="@+id/tv_list_logbookreg_carbsnunit"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center_horizontal"
         android:text="@string/grams"
         android:textSize="12sp" />
      -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_logbookreg_middle"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_logbookreg_insulin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textSize="@dimen/list_text_small"
            tools:text="Novolog"/>

        <TextView
            android:id="@+id/tv_list_logbookreg_insulin_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_text_huge"
            android:textStyle="bold"
            tools:text="2.0"/>
        <!--
     <TextView
         android:id="@+id/tv_list_logbookreg_insulinunit"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="center_horizontal"
         android:text="uni."
         android:textSize="12sp" />
      -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_logbookreg_middleright"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_logbookreg_glycemia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/bloodglucose"
            android:textSize="@dimen/list_text_small"/>

        <TextView
            android:id="@+id/tv_list_logbookreg_glycemia_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_text_huge"
            android:textStyle="bold"
            tools:text="100"/>
        <!-- 
        <TextView
	        android:id="@+id/tv_list_logbookreg_glycemia_unit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:text="@string/mg_dl"
	        android:textSize="12sp" />
         -->
    </LinearLayout>

</LinearLayout>