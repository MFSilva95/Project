<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:id="@+id/homeScrollView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true"
			android:orientation="vertical"
			android:scrollbars="vertical"
			tools:context=".ui.activities.Home">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp" >
        
        <TableLayout android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:stretchColumns="0,1" >
        	<TableRow android:id="@+id/tableRow1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="start"
		        android:padding="5dp" >
            	
        	    <Button
        	        android:id="@+id/meal"
					android:drawableTop="@drawable/meal"
        	        android:onClick="Call_Meal"
					android:text="@string/Meal"
					android:theme="@style/HomeButtonTheme"
					style="@style/HomeButtonStyle"/>
        	    
        	    <Button
        	        android:id="@+id/glycemia"
        	        android:drawableTop="@drawable/glucose"
        	        android:onClick="Call_Glycemia"
        	        android:text="@string/Glycemia"
					android:theme="@style/HomeButtonTheme"
					style="@style/HomeButtonStyle"/>
        	    
        	</TableRow>
        	<TableRow android:id="@+id/tableRow2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="start"
		        android:padding="5dp" >
        	    
        	    <Button
        	        android:id="@+id/exercise"
        	        android:drawableTop="@drawable/exercise"
					style="@style/HomeButtonStyle"
					android:theme="@style/HomeButtonTheme"
					android:onClick="Call_Exercise"
        	        android:text="@string/Exercise"/>

        	    <Button
        	        android:id="@+id/insulina"
					style="@style/HomeButtonStyle"
					android:theme="@style/HomeButtonTheme"
					android:drawableTop="@drawable/insulin"
        	        android:onClick="Call_Insulin"
        	        android:text="@string/Insulin"/>

        	</TableRow>
        	<TableRow android:id="@+id/tableRow3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="start"
		        android:padding="5dp" >

		        <Button
		            android:id="@+id/carbs"
		            android:drawableTop="@drawable/carbs"
					android:theme="@style/HomeButtonTheme"
					android:onClick="Call_Carbs"
					style="@style/HomeButtonStyle"
		            android:text="@string/Carbs"/>
		        
		        <Button
        	        android:id="@+id/logbook"
        	        android:drawableTop="@drawable/logbook"
					android:theme="@style/HomeButtonTheme"
					style="@style/HomeButtonStyle"
        	        android:onClick="Call_Logbook"
        	        android:text="@string/Logbook"/>
            </TableRow>
        
        </TableLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp">
	        <Button
	  	        android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
	            android:id="@+id/glycemiasss"
				android:theme="@style/HomeButtonTheme"
				android:drawableRight="@drawable/viewdetail"
	            android:drawableEnd="@drawable/viewdetail"
	            android:onClick="Call_OutrasLeituras" />
        
        
        </RelativeLayout>
    </LinearLayout>
</ScrollView>