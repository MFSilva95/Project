<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    
    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/list_medicineName"
        android:layout_height="48dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:layout_toLeftOf="@+id/list_medicineRemove"
        android:id="@+id/list_medicineUnit"
        android:layout_height="48dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginRight="8dp"
        android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceSmall" />
	
    
    <ImageButton
        android:contentDescription="medicineRemove_img"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/list_medicineRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:src="@drawable/abs__ic_clear"
        android:background="@color/transparent" />

