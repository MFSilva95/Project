        	        android:drawableTop="@drawable/meal"
        	        android:height="80dp"
        	        android:onClick="Call_Meal"
        	        android:paddingTop="8dp"
        	        android:text="@string/Meal"
        	        android:textColor="@color/primary_text_holo_dark"
        	        android:textSize="14sp"
        	        android:width="80dp" />
        	    
