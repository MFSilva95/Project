<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	
	
	<LinearLayout
	    android:id="@+id/ll_list_carbs_left"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="3dp"
	    android:orientation="vertical"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true" >
	    <TextView
	        android:id="@+id/tv_list_carbs_data"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:textSize="12sp" />
        <TextView
	        android:id="@+id/tv_list_carbs_hora"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:textSize="12sp" />
        <TextView
	        android:id="@+id/tv_list_carbs_tag"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:textSize="12sp"
	        android:lines="1"
	        android:ellipsize="end" />
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/ll_list_insulinreg_middleright"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="8dp"
	    android:orientation="vertical"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/ib_list_carbs_detail" >
	    
        <TextView
	        android:id="@+id/tv_list_carbs_value"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="24sp"
	        android:textStyle="bold" />
        <TextView
	        android:id="@+id/tv_list_carbs_unit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:text="gramas"
	        android:textSize="12sp" />
	</LinearLayout>
	<ImageButton
        android:contentDescription="carbs_detail_img"
        android:id="@+id/ib_list_carbs_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/viewdetail"
        android:background="@color/transparent" />
</RelativeLayout>